  <main>
    <div class="login-wrap">
      <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">CURRENT</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">INSERT </label>
        <div class="login-form">
          <div class="sign-in-htm">
            <div class="group">
              <p id="user" type="text" class="input">{{description}}</p>
            </div>
            <div class="group">
              <p class="input">price-{{price}}</p>
            </div>
            <div class="group">
              <p class="input">sale-{{sale}}%</p>
            </div>
            <div class="group">
              <p class="input">category-{{category}}</p>
            </div>
            <div class="group">
              <p class="input">brand-{{brand}}</p>
            </div>
            <div class="group">
              <p class="input">weight-{{weight}}</p>
            </div>
            <div class="group">
              <p class="input">insurance-{{insurance}}</p>
            </div>
            <div class="group">
              <p class="input">color-{{color}}</p>
            </div>
            <div class="group">
              <p class="input">extra-{{one}}</p>
            </div>
            <div class="group">
              <p class="input">extra-{{two}}</p>
            </div>
            <div class="group">
              <p class="input">quantity-{{qnt}} units</p>
            </div>
            <div class="hr"></div>
           
          </div>
          <div class="sign-up-htm">
            <div class="group">
              <label for="user" class="label">description</label>
              <input name="description" placeholder="description" type="text" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">price</label>
              <input name="price" placeholder="price" type="text" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">sale</label>
              <input name="sale" type="password" class="input" >
            </div>
            <div class="group">
              <label for="pass" class="label">category</label>
              <input name="category" type="text" placeholder="category" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">brand</label>
              <input name="brand" type="text" placeholder="brand" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">weight</label>
              <input name="weight" type="text" placeholder="weight" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">color</label>
              <input name="color" type="text" placeholder="color" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">one</label>
              <input name="one" type="text" placeholder="one" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">two</label>
              <input name="two" type="text" placeholder="two" class="input">
            </div>
            <div class="group">
              <label for="pass" class="label">qnt</label>
              <input name="qnt" type="text" placeholder="qnt" class="input">
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>